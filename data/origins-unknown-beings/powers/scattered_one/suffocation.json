{
    "name": "Suffocation",
    "description": "If you press your secondary ability key while in your Scattered form, your cloud grows in size temporarily, anything within this expanded cloud is poisoned.",
    "type": "origins:multiple",
    "enabled": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "timer": {
        "type": "origins:resource",
        "min": 0,
        "max": 10,
        "start_value": 10,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 3,
            "condition": {
                "type": "origins:resource",
                "resource": "origins-unknown-beings:scattered_one/suffocation_timer",
                "comparison": "<",
                "compare_to": 10
            }
        }
    },
    "enable_this": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
                "comparison": "==",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
                "change": -69420
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
                "change": 1
            }
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": false
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "origins-unknown-beings:scattered_one/scattered_form_disabled",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "origins-unknown-beings:scattered_one/suffocation_timer",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        }
    },
    "poison_cloud": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tag @s add self"
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle dust 0.45 0 0.7 1 ~ ~ ~ 1 1 1 0.001 32 normal @a"
                },
                {
                    "type": "origins:execute_command",
                    "command": "effect give @e[tag = !self, distance = ..3] poison 2 1 false"
                },
                {
                    "type": "origins:execute_command",
                    "command": "tag @s remove self"
                }
            ]
        },
        "interval": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "decrement_resource": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "origins-unknown-beings:scattered_one/suffocation_timer",
                "comparison": ">",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "origins-unknown-beings:scattered_one/suffocation_timer",
                "change": -1
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
                "change": -1
            }
        },
        "interval": 20,
        "condition": {
            "type": "origins:resource",
            "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "increment_resource": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "origins-unknown-beings:scattered_one/suffocation_timer",
            "change": 1
        },
        "interval": 20,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "origins-unknown-beings:scattered_one/suffocation_enabled",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "origins-unknown-beings:scattered_one/suffocation_timer",
                    "comparison": ">=",
                    "compare_to": 10,
                    "inverted": true
                }
            ]
        }
    }
}